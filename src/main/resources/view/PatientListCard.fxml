<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets bottom="5" left="15" right="5" top="5" />
      </padding>
      <HBox alignment="CENTER_LEFT">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="name" styleClass="cell_big_label" text="\$first" wrapText="true">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
      </HBox>
      <Label fx:id="gender" styleClass="cell_small_label" text="\$gender" wrapText="true">
            <font>
               <Font size="11.0" />
            </font>
            <padding>
               <Insets left="10.0" />
            </padding></Label>
      <Label fx:id="birthdate" styleClass="cell_small_label" text="\$birthdate" wrapText="true">
            <font>
               <Font size="11.0" />
            </font>
            <padding>
               <Insets left="10.0" />
            </padding>
            <VBox.margin>
               <Insets />
            </VBox.margin></Label>
      <Label fx:id="phone" styleClass="cell_small_label" text="\$phone" wrapText="true">
            <font>
               <Font size="11.0" />
            </font>
            <VBox.margin>
               <Insets />
            </VBox.margin>
            <padding>
               <Insets left="10.0" />
            </padding></Label>
      <FlowPane fx:id="tags">
            <padding>
               <Insets left="10.0" />
            </padding></FlowPane>
    </VBox>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
  </GridPane>
</HBox>
